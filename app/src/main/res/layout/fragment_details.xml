<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sureshssk2006.gmail.popularmoves.Detailsfragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/details_original_title"
        android:id="@+id/details_original_title"
        android:textSize= "36sp"
        android:padding="18dp"
        android:textColor="@android:color/white"
        android:background="#009688"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/details_image_poster"
            android:layout_margin="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:adjustViewBounds="true"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/details_release_date"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/details_rating"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/details_plot_synopsis"
        android:layout_margin="8dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
